<h2>マイページ</h2>

<table>
  <tbody>
    <tr>
      <td>社員ID</td>
      <td><%= @customer.id %></td>
    </tr>

    <tr>
      <td>氏名</td>
      <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>
    
    <tr>
      <td>フリガナ</td>
      <td>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>

  </tbody>
</table>

<div>
  <%= link_to "編集する", edit_public_customer_path %>
</div>

<div>
  <%= link_to "一覧に戻る", public_customer_path %>
</div>